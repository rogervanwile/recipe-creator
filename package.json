{
  "name": "foodblogkitchen-toolkit",
  "version": "1.4.2",
  "description": "Manage recipes and optimize them automatically for Google Featured Snippets.",
  "author": "Oliver Wagner",
  "license": "GPL-2.0-or-later",
  "main": "build/index.js",
  "scripts": {
    "create-release": "yarn build && npx ts-node ./build-tools/create-release.ts",
    "clean": "rm -rf ./build",
    "build": "yarn clean && wp-scripts build && gulp build && yarn build:precompile-templates",
    "build:precompile-templates": "php ./build-tools/precompile-templates.php",
    "format:js": "wp-scripts format-js",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "start": "wp-scripts start && gulp watch",
    "packages-update": "wp-scripts packages-update",
    "archive": "node ./create-archive.js",
    "sync:uebersee": "rsync -a ./ /Applications/MAMP/htdocs/uebersee/wp-content/plugins/foodblogkitchen-toolkit",
    "sync:blank": "rsync -a ./ /Applications/MAMP/htdocs/kantina-delicacy-blank/wp-content/plugins/foodblogkitchen-toolkit",
    "sync": "yarn sync:uebersee && yarn sync:blank",
    "test:start:cli": "yarn run wp-cypress start && yarn run wp-cypress wp \"language core install de_DE\" && yarn run wp-cypress wp \"language core activate de_DE\" && yarn run cypress run",
    "test:start": "yarn run wp-cypress start && yarn run wp-cypress wp \"language core install de_DE\" && yarn run wp-cypress wp \"language core activate de_DE\" && yarn run cypress open",
    "test:stop": "yarn run wp-cypress stop"
  },
  "devDependencies": {
    "@bigbite/wp-cypress": "^0.8.1",
    "@types/filesystem": "^0.0.29",
    "@types/node": "^14.14.22",
    "@types/showdown": "^1.9.3",
    "@wordpress/scripts": "^12.2.0",
    "cypress": "6.5.0",
    "cypress-image-snapshot": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "prompt": "^1.1.0",
    "showdown": "^1.9.1",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@wordpress/date": "^3.12.0",
    "@wordpress/keycodes": "^2.16.0",
    "@wordpress/media-utils": "^1.16.0",
    "gulp-sass": "^4.1.0",
    "handlebars": "^4.7.6",
    "node-sass": "^4.14.1"
  }
}