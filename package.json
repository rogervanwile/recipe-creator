{
  "name": "foodblogkitchen-toolkit",
  "version": "1.6.2",
  "description": "Manage recipes and optimize them automatically for Google Featured Snippets.",
  "author": "Oliver Wagner",
  "license": "GPL-2.0-or-later",
  "main": "build/index.js",
  "scripts": {
    "create-release": "yarn build && npx ts-node ./build-tools/create-release.ts",
    "clean": "rm -rf ./build",
    "build": "yarn clean && wp-scripts build",
    "build:precompile-templates": "php ./build-tools/precompile-templates.php",
    "format:js": "wp-scripts format-js",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "start": "wp-scripts start",
    "packages-update": "wp-scripts packages-update",
    "archive": "node ./create-archive.js",
    "sync": "yarn sync:uebersee && yarn sync:blank",
    "test:start:cli": "yarn run wp-cypress start && yarn run cypress run",
    "test:start": "yarn run wp-cypress start && yarn run cypress open",
    "test:stop": "yarn run wp-cypress stop",
    "i18n:make-pot": "wp i18n make-pot ./ languages/foodblogkitchen-toolkit.pot --exclude=src,node_modules",
    "i18n:make-json": "rm -rf languages/*.json || true && wp i18n make-json languages/foodblogkitchen-toolkit-de_DE.po --no-purge --use-map=./i18n-json-map.json"
  },
  "devDependencies": {
    "@bigbite/wp-cypress": "0.9.5",
    "@types/color": "^3.0.3",
    "@types/dom-screen-wake-lock": "^1.0.0",
    "@types/filesystem": "0.0.32",
    "@types/handlebars": "^4.1.0",
    "@types/node": "^14.14.22",
    "@types/qrcode": "^1.4.2",
    "@types/showdown": "1.9.4",
    "@wordpress/scripts": "22.2.1",
    "cypress": "9.5.2",
    "cypress-image-snapshot": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "handlebars-loader": "^1.7.1",
    "prompt": "^1.1.0",
    "qrcode": "^1.5.0",
    "showdown": "2.0.2",
    "ts-loader": "9.2.7",
    "ts-node": "10.7.0",
    "typescript": "^4.1.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@wordpress/date": "4.4.1",
    "@wordpress/keycodes": "3.4.1",
    "@wordpress/media-utils": "3.2.1",
    "caniuse-lite": "^1.0.30001314",
    "color": "^4.2.1",
    "gulp-sass": "^4.1.0",
    "handlebars": "^4.7.6",
    "node-sass": "^4.14.1"
  }
}
